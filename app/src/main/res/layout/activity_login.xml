<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.view.activity.LoginActivity"
    android:background="@mipmap/logbg"
    >
    <LinearLayout
        android:layout_marginTop="130dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/shouji_bg"
            />
        <EditText
            android:id="@+id/log_edit_Mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:textColorHint="#fff"
            android:textSize="18sp"
            android:textColor="#fff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/suo"
            />
        <EditText
            android:id="@+id/log_edit_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="登录密码"
            android:textColorHint="#fff"
            android:textSize="18sp"
            android:textColor="#fff"
            />

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginRight="40dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/yanjing"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/log_check_jizhumima"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textColor="#ffffff"
            />
        <CheckBox
            android:id="@+id/log_check_zidongdenglu"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="自动登录"
            android:textColor="#ffffff"
            />
       <TextView
           android:id="@+id/log_text_zhuce"
           android:layout_marginRight="14dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#fff"
           android:text="快速注册"
           />
    </LinearLayout>
    <Button
        android:id="@+id/log_but_login"
        android:layout_marginTop="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="#ff7575"
        android:text="登录"
        android:textColor="#fff"
        />

<LinearLayout
    android:layout_marginLeft="20dp"
    android:layout_marginTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
    <View
        android:layout_width="90dp"
        android:layout_height="2dp"
        android:background="#ffffff"
        />
    <TextView
        android:id="@+id/log_text_disanfang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="第三方账号快速登录"
        android:textColor="#FFF"
        />
    <View
        android:layout_width="90dp"
        android:layout_height="2dp"
        android:background="#ffffff"
        />
</LinearLayout>

<ImageView
    android:id="@+id/log_imag_weixin"
    android:layout_marginTop="16dp"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/weixin"
    android:layout_gravity="center_horizontal"
    />


</LinearLayout>