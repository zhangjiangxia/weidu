<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context="com.bw.movie.view.activity.YingPingActivity"
xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/p_comment_simple"
        android:layout_width="40dp"
        android:layout_height="40dp"
        fresco:actualImageScaleType="centerInside"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="@color/cardview_dark_background"
        fresco:roundingBorderWidth="1dp" />

    <TextView
        android:id="@+id/p_user_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="xxx"
        android:textColor="#333333"
        android:textSize="16dp" />

</LinearLayout>

<TextView
    android:id="@+id/p_review_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:textColor="#333333"
    android:text="xxx"
    android:textSize="12dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/p_comment_shijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#999999"
        android:text="时间"
        android:layout_weight="1"
        />

    <CheckBox
        android:layout_marginLeft="30dp"
        android:id="@+id/p_comment_check_zan"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@mipmap/zan"
        android:button="@null"
        />
    <TextView
        android:id="@+id/p_zan_shu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1622"
        android:layout_marginLeft="6dp"
        />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="18dp"
        android:src="@mipmap/xinxi"/>
    <TextView
        android:id="@+id/p_ping_shu"
        android:text="886"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>