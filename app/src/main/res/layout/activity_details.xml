<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.bw.movie.view.activity.DetailsActivity">
    <include layout="@layout/include_details_title"/>
  <LinearLayout
      android:layout_marginTop="12dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <ImageView
          android:layout_marginLeft="20dp"
          android:id="@+id/details_image"
          android:layout_width="120dp"
          android:layout_height="150dp" />
      <LinearLayout
          android:layout_marginLeft="20dp"
          android:orientation="vertical"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/details_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="xxxx"
              android:textSize="25dp"
              />
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="类型："
                  />
              <TextView
                  android:id="@+id/details_type"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="xxx"
                  />
          </LinearLayout>
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="导演："
                  />
              <TextView
                  android:id="@+id/details_director"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="xxx"
                  />
          </LinearLayout>
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="时长："
                  />
              <TextView
                  android:id="@+id/details_duration"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="xxx"
                  />
          </LinearLayout>

      </LinearLayout>
<ImageView
    android:layout_marginRight="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
    />
  </LinearLayout>
<TextView
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="剧情简介"
    android:textSize="25dp"
    />
<TextView
    android:id="@+id/details_synopsis"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="xxx"
    android:textSize="17dp"
    />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="演职人员"
        android:textSize="25dp"
        />
<LinearLayout
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    >
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="演员名字"
      android:layout_marginLeft="18dp"
      android:background="#FFD2D2"
      />
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="饰演角色"
        android:background="#FFD2D2"
        android:layout_marginRight="18dp"
        />
</LinearLayout>

</LinearLayout>