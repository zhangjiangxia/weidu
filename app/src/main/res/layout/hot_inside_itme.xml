<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/liebiao_bg"
    android:layout_marginBottom="30dp"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/hotinside_simpleDraweeview"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:padding="5dp"
        android:background="#cccc55"
        />

    <LinearLayout
        android:layout_toRightOf="@+id/hotinside_simpleDraweeview"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/hotinside_name"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="xxxx"
                android:textColor="#ffffff"
                android:textSize="25dp"
                />
            <ImageView
                android:id="@+id/hot_imag_baixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/baixin"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/hotinside_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"
            android:textColor="#ffffff"
            android:textSize="16dp"
            />
    </LinearLayout>
</RelativeLayout>



