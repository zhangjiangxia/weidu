<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.bw.movie.view.activity.XqrecommendActivity"

    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/lunbotu"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/xqcom_imag"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/xqcom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="xxxx"
                android:textSize="14sp"
                android:textColor="#ffffff"
                />
            <TextView
                android:id="@+id/xqcom_weizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="xxxx"
                android:textColor="#ffffff"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/xqcom_iamg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/fangxiang"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        tools:context="com.bw.movie.view.fragment.FilmFragment">

        <recycler.coverflow.RecyclerCoverFlow
            android:id="@+id/xqrecom_list"
            android:layout_width="match_parent"
            android:layout_height="500dp">
        </recycler.coverflow.RecyclerCoverFlow>

    </RelativeLayout>

</LinearLayout>

<android.support.v7.widget.RecyclerView
    android:id="@+id/xqrecom_recyleview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
</android.support.v7.widget.RecyclerView>
</LinearLayout>